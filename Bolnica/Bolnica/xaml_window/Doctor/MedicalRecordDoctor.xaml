<Window x:Class="Bolnica.xaml_window.Doctor.MedicalRecordDoctor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bolnica.xaml_window.Doctor"
        mc:Ignorable="d"
        Title="MedicalRecordDoctor" Height="600" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="80"/>

            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0"  Name="lbuJMBG">JMBG</Label>
        <Label Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center"  Name="lbuMedicalRecord">Br.Kartona</Label>
        <Label Grid.Row="0" Grid.Column="4" HorizontalAlignment="Right"  Name="lbuBZK">BZK</Label>

       
            <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="35" Foreground="Black" >Zdravstevni karton</Label>
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" BorderBrush="#FF939191" BorderThickness="0,0,0,3" Width="500">
            <Label HorizontalAlignment="Center" VerticalAlignment="Bottom" Name="lbuUsernamePatient">Korisnicko ime</Label>
        </Border>
        <Label HorizontalAlignment="Center" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" VerticalAlignment="Bottom" FontSize="15" FontWeight="Bold">Lični podaci</Label>

        <Border Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="3" Grid.RowSpan="7" Margin="10, 10,100,0" BorderThickness="1,1,1,1" BorderBrush="#FFAEACAC" >
        </Border>
        <Label Grid.Row="5" Grid.Column="0" Margin="20,0,0,0" FontWeight="Bold">Ime:</Label>
        <Label Name="lbNamePatient" Grid.Row="5" Grid.Column="1" Margin="10,0,0,0">Im</Label>
        <Label  Grid.Row="6" Grid.Column="0" Margin="20,0,0,0" FontWeight="Bold">Prezime:</Label>
        <Label Name="lbSurnamePatient" Grid.Row="6" Grid.Column="1" Margin="10,0,0,0">Prezime:</Label>
        <Label  Grid.Row="7" Grid.Column="0" Margin="20,0,0,0" Width="Auto" FontWeight="Bold">Datum rodjenja:</Label>
        <Label Name="lbDateOfBirthPatient" Grid.Row="7" Grid.Column="1" Width="Auto" Margin="10,0,0,0">Datum rodjenja:</Label>
        <Label Grid.Row="8" Grid.Column="0" Margin="20,0,0,0" Width="Auto" FontWeight="Bold">Adresa stanovanja:</Label>
        <Label Name="lbAddressPatient" Grid.Row="8" Grid.Column="1" Width="Auto" Margin="10,0,0,0">Adresa stanovanja:</Label>
        <Label Grid.Row="9" Grid.Column="0" Margin="20,0,0,0" FontWeight="Bold">Broj telefona:</Label>
        <Label Name="lbNumberPatient" Grid.Row="9" Grid.Column="1" Margin="10,0,0,0">Broj telefona:</Label>
        <Label Grid.Row="10" Grid.Column="0" Margin="20,0,0,0" FontWeight="Bold">Pol:</Label>
        <Label Name="lbGender" Grid.Row="10" Grid.Column="1" Margin="10,0,0,0">Pol:</Label>

        <Border Grid.Column="3" Grid.Row="3" Grid.ColumnSpan="3" Margin="10,0,90,0" Background="White" >
            <Label HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="15" FontWeight="Bold" >Istorija pregleda</Label>
        </Border>
        <StackPanel Grid.Row="4" Grid.RowSpan="7" Grid.Column="2" Grid.ColumnSpan="3" Margin="40,10,10,30">
            <ListView Name="lvDataBinding" Margin ="0, 0, 0, 0" Height="170">
                <ListView.View>
                    <GridView>

                        <GridViewColumn Header="ID" Width="25" DisplayMemberBinding="{Binding AnamnesisId}"></GridViewColumn>
                        <GridViewColumn Header="Vrsta anamneze" DisplayMemberBinding="{Binding TypeAnamnesis}" Width="100"></GridViewColumn>
                        <GridViewColumn Header="Opis pregleda" DisplayMemberBinding="{Binding DescriptionAnamnesis}" Width="100"/>
                        <GridViewColumn Header="Mišljenje" DisplayMemberBinding="{Binding OpinionForAnamnesis}" Width="100"/>
                    </GridView>
                </ListView.View>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel>
                            <ListViewItem>
                                <TextBlock Text="{Binding ExaminationId}" FontWeight="Bold" />
                            </ListViewItem>
                            <TextBlock Text="{Binding StartTime}" FontWeight="Bold" />

                            <TextBlock Text="{Binding EndTime}" FontWeight="Bold" />

                            <TextBlock Text="{Binding doctor.User.Username}" FontWeight="Bold" />

                            <TextBlock Text="{Binding patient.User.Username}" FontWeight="Bold" />

                            <TextBlock Text="{Binding room}" FontWeight="Bold" />

                        </WrapPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

           
        </StackPanel>

        
        <Button Grid.Column="2" Grid.ColumnSpan="2"  Grid.Row="10"  Width="80" Height="30" Click="Button_Click_Create_Anamnesis" Margin="0,0,50,0">Napiši</Button>
        <Button Grid.Column="4" Grid.Row="10"  Width="80" Height="30" Click="Button_Click_Update_Anamnesis">Ažuriraj</Button>
        <Button Grid.Column="3" Grid.ColumnSpan="2" Margin="0,0,80,0" Grid.Row="10"  Width="80" Height="30" Click="Button_Click_Open_Anamnesis">Otvori</Button>

        <Button Grid.Column="0" Grid.Row="12"  Grid.ColumnSpan="2" Height="30" Width="150">Zakaži kontrolni pregled</Button>
        <Button Grid.Column="0" Grid.Row="13"  Grid.RowSpan="2" Grid.ColumnSpan="2" Width="150" Height="30">Zakaži operaciju</Button>
        <Button Grid.Column="1" Grid.Row="12"  Grid.ColumnSpan="3" Width="150" Height="30">Izveštaj o pregled</Button>
        <Button Grid.Column="3" Grid.Row="12"  Grid.ColumnSpan="2" Width="150" Height="30" Click="Button_Click_Specialist_Examination">Uput za doktora specijalistu</Button>
        <Button Grid.Column="3" Grid.Row="13" Grid.RowSpan="2" Grid.ColumnSpan="2" Width="150" Height="30" Click="Button_Click_Instructions_For_Hospital_Treatment">Uput za bolničko lečenje</Button>
        <Button Grid.Column="4" Grid.Row="15" Width="90" Click="Button_Click_Close" Grid.RowSpan="2"  Height="30" Background="Gray" Foreground="White">Izadji</Button>
    </Grid>
</Window>
