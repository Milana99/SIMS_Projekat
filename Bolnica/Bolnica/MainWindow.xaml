<Window x:Class="Bolnica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bolnica"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Width="100" Height="50" Margin="500, 300, 1, 30" Click="Doctor_Button">Doktor</Button>
        <Button Width="100" Height="50" Margin="500,100,0,250" Click="Manager_Button">Upravnik</Button>
        <Button Width="100" Height="50" Margin="100,300,500,30" Click="Patient_Button">Pacijent</Button>
        <Button Width="100" Height="50" Margin="100,100,500,250" Click="Secretary_Button">Sekretar</Button>
    </Grid>
</Window>
